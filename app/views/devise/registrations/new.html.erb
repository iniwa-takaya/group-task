<div class="wrapper">
  <div class="main-window">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      
      <p class="new-user-title"><%= image_tag 'create.png', size: '380x50', class: 'account-image' %></p>
      
      <%= render 'shared/error_form', model: f.object %>

      <div class="field-title">ニックネーム</div>
      <div class="field">
        <%= f.text_field :nick_name, class:"input-default", id:"nickname", maxlength:"20" %>
      </div>
      
      <div class="field-title">メールアドレス</div>
      <div class="field">
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="field-title">パスワード（6文字以上数英字混合）</div>
      <div class="field-password">
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <%= image_tag 'open-eye', size: '32x32', class: "eye-btn" %>
      </div>

      <div class="field-title">パスワード再入力</div>
      <div class="field">
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>

      <div class="field-title">アイコン画像（任意）</div>
      <div class="file-field">
        <%= f.file_field :image, class:"file-default" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウントを登録する", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
