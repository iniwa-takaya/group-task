<div class="wrapper">
  <div class="main-window">
    <div class="login-form">
      <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
        <p class="login-user-title"><%= image_tag 'login.png', size: '300x50', class: 'account-image' %></p>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="field-title">メールアドレス</div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default" %>
        </div>

        <div class="field-title">パスワード</div>
        <div class="field-password">
          <%= f.password_field :password, class:"input-default" %>
          <%= image_tag 'open-eye.png', size: '32x32', class: "eye-btn", id: "eye-login-btn" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を記録 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "button" %>
        </div>
      <% end %>

      <div class="link">
        <%= render "devise/shared/links" %>
      </div>

      <div class="other-session">
        <div class="other-session-title">SNSでログイン</div>
        <div class="other-session-index">
          <div class="sns-session-btn"><%= link_to 'Google', user_facebook_omniauth_authorize_path, method: :post, class: "sns-session-pass" %></div>
          <div class="sns-session-btn"><%= link_to 'Facebook', user_facebook_omniauth_authorize_path, method: :post, class: "sns-session-pass" %></div>
        </div>
      </div>
      
    </div>
  </div>
</div>


