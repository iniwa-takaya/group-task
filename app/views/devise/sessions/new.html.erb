<div class="wrapper">
  <div class="main-window">
    <p class="login-user-title"><%= image_tag 'login.png', size: '300x50', class: 'account-image' %></p>
    <div class="login-form">
      <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="field-title">メールアドレス</div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default" %>
        </div>

        <div class="field-title">パスワード</div>
        <div class="field-password">
          <%= f.password_field :password, class:"input-default" %>
          <%= image_tag 'open-eye', size: '32x32', class: "eye-btn" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を記録 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "button" %>
        </div>
      <% end %>
    </div>
    
    <div class="link">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


